<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>

    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>6LetoN8UAAAAABdsv7lnRrpSchH80U2RMNf-rFQ6</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
        <param-value>6LetoN8UAAAAAGKHlB1FjKsyjpNQ0Uv7mOljYSXX</param-value>
    </context-param>

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>login/login.xhtml</welcome-file>
    </welcome-file-list>

    <security-role>
        <role-name>CLIENT</role-name>
    </security-role>
    <security-role>
        <role-name>MANAGER</role-name>
    </security-role>
    <security-role>
        <role-name>ADMINISTRATOR</role-name>
    </security-role>

    <!--UserEndpoint-->
    <security-role>
        <role-name>addNewUser</role-name>
    </security-role>
    <security-role>
        <role-name>getUserReport</role-name>
    </security-role>
    <security-role>
        <role-name>getEditUserDtoById</role-name>
    </security-role>
    <security-role>
        <role-name>getEditUserDtoByLogin</role-name>
    </security-role>
    <security-role>
        <role-name>getUserDetailsDtoById</role-name>
    </security-role>
    <security-role>
        <role-name>getLoginDtoByLogin</role-name>
    </security-role>
    <security-role>
        <role-name>editUser</role-name>
    </security-role>
    <security-role>
        <role-name>editOwnData</role-name>
    </security-role>
    <security-role>
        <role-name>changeUserPassword</role-name>
    </security-role>
    <security-role>
        <role-name>changeOwnPassword</role-name>
    </security-role>
    <security-role>
        <role-name>lockAccount</role-name>
    </security-role>
    <security-role>
        <role-name>unlockAccount</role-name>
    </security-role>
    <security-role>
        <role-name>getOwnDetailsDtoByLogin</role-name>
    </security-role>
    <security-role>
        <role-name>saveSuccessAuthenticate</role-name>
    </security-role>
    <security-role>
        <role-name>editUserLastLoginAndInvalidLoginAttempts</role-name>
    </security-role>
    <security-role>
        <role-name>getFilteredRowCount</role-name>
    </security-role>
    <security-role>
        <role-name>getResultList</role-name>
    </security-role>
    <!--UserAccessLevelEndpoint-->
    <security-role>
        <role-name>findUserAccessLevelById</role-name>
    </security-role>
    <security-role>
        <role-name>findUserAccessLevelByLogin</role-name>
    </security-role>
    <security-role>
        <role-name>editUserAccessLevels</role-name>
    </security-role>
    <!--YachtEndpoint-->
    <security-role>
        <role-name>addYacht</role-name>
    </security-role>
    <security-role>
        <role-name>getAllYachts</role-name>
    </security-role>
    <security-role>
        <role-name>getYachtById</role-name>
    </security-role>
    <security-role>
        <role-name>getEditYachtDtoById</role-name>
    </security-role>
    <security-role>
        <role-name>editYacht</role-name>
    </security-role>
    <security-role>
        <role-name>deactivateYacht</role-name>
    </security-role>
    <!--YachtModelEndpoint-->
    <security-role>
        <role-name>addYachtModel</role-name>
    </security-role>
    <!--YachtPortEndpoint-->
    <security-role>
        <role-name>getAllYachtsByPort</role-name>
    </security-role>
    <security-role>
        <role-name>assignYachtToPort</role-name>
    </security-role>
    <security-role>
        <role-name>retractYachtFromPort</role-name>
    </security-role>
    <!--Rentals-->
    <security-role>
        <role-name>getRentals</role-name>
    </security-role>
    <security-role>
        <role-name>getAllRentals</role-name>
    </security-role>
    <security-role>
        <role-name>getRentalsByYacht</role-name>
    </security-role>
    <security-role>
        <role-name>getRentalById</role-name>
    </security-role>
    <security-role>
        <role-name>cancelRental</role-name>
    </security-role>
    <security-role>
        <role-name>getUserRentalDetails</role-name>
    </security-role>
    <security-role>
        <role-name>addRental</role-name>
    </security-role>
    <!--Ports-->
    <security-role>
        <role-name>getAllPorts</role-name>
    </security-role>
    <security-role>
        <role-name>getPortById</role-name>
    </security-role>
    <!--Opinions-->
    <security-role>
        <role-name>addOpinion</role-name>
    </security-role>
    <security-role>
        <role-name>getAllOpinionsByYacht</role-name>
    </security-role>
    <security-role>
        <role-name>getOpinionById</role-name>
    </security-role>
    <security-role>
        <role-name>editOpinion</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Https redirection</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>AdminConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Admin sites</web-resource-name>
            <description/>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>ADMINISTRATOR</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>ManagerConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Manager sites</web-resource-name>
            <description/>
            <url-pattern>/manager/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>MANAGER</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>ClientConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Client sites</web-resource-name>
            <description/>
            <url-pattern>/client/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>CLIENT</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <display-name>LoginConstr</display-name>
        <web-resource-collection>
            <web-resource-name>Login sites</web-resource-name>
            <description/>
            <url-pattern>/login/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <error-page>
        <error-code>403</error-code>
        <location>/errors/403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/500.xhtml</location>
    </error-page>
